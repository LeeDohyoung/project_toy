    <select id="list" resultType="WakeUpVO">
    <![CDATA[
    select
    seq, date, comment
    from daily_log
    order by date
    ]]>
    </select>
    
    <insert id="create">
        insert into daily_log (date, comment)
        values(now(),#{comment})
    </insert>
    
    <delete id="delete">
        delete from daily_log where seq = #{seq}
    </delete>
